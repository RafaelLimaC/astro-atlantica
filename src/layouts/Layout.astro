---
import "../styles/globals.scss";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --background-primary: #fff7eb;

    --accent-orange: #f47521;
    --accent-pink: #fac3b9;
    --accent-blue: #443e72;
    --color-blue: #38315a;
    --color-dark: #555555;
    --color-light: #ffffff;

    --ff-roboto: "Roboto", sans-serif;
    --ff-roboto-slab: "Roboto Slab", serif;

    --background-gradient: linear-gradient(var(--background-primary), white);
  }
  html {
    font-family: system-ui, sans-serif;
  }
</style>
