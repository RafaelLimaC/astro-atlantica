---
import Button from "./Button.astro";
---

<div class="mini-cta__wrapper">
  <div class="mini-cta">
    <p>Entre em contato e agende uma reuni√£o</p>
    <div class="mini-cta__buttons">
      <Button class="white-bg__black-text" src="/icons/envelope.svg">
        Entre em contato
      </Button>
      <Button class="black-bg__white-text" src="/icons/list.svg">
        Cadastre-se
      </Button>
    </div>
  </div>
</div>

<style lang="scss">
  .mini-cta__wrapper {
    display: flex;
    justify-content: center;
    background-color: white;
    padding: 3.5rem 1rem;

    .mini-cta {
      max-width: 102rem;
      width: 100%;

      padding: 2.5rem 1.5rem 3.5rem;

      background-color: var(--color-dark);
      background-image: url("detail-mini-cta.svg");
      background-repeat: no-repeat;

      background-position: 110% 115%;
      background-size: 200px;
      border-radius: 1.5rem;

      display: flex;
      align-items: flex-start;
      gap: 3rem;
      justify-content: space-between;
      flex-direction: column;

      p {
        font-size: 2rem;
        font-weight: 600;
        color: white;
        max-width: 17ch;
        line-height: 1.5;
      }

      &__buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
    }
  }

  @media screen and (min-width: 900px) {
    .mini-cta__wrapper {
      padding: 6rem 1rem;

      .mini-cta {
        flex-direction: column;
        align-items: center;

        gap: 3rem;
        background-position: 105% 40%;
        background-size: unset;

        p {
          font-size: 3.25rem;
        }

        &__buttons {
          flex-direction: row;
          gap: 1rem;
        }
      }
    }
  }

  @media screen and (min-width: 1200px) {
    .mini-cta__wrapper {
      padding: 6rem 1rem;

      .mini-cta {
        padding: 4rem;
        background-position: 55% 40%;
        flex-direction: row;
      }
    }
  }
</style>
