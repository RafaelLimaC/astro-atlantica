    <img
      id="headerLogo"
      class="header-logo"
      src="/logo-mobile.svg"
      alt="Logo"
    />
    <nav class="header-nav" id="navMenu">
      <ul class="header-nav__ul">
        <li><a href="#sobre">Sobre</a></li>
        <li><a href="#timeline">Hist칩ria</a></li>
        <li><a href="#equipe">Equipe</a></li>
        <li><a href="#depoimentos">Depoimentos</a></li>
      </ul>
      <div class="nav-cta">
        <Button class="primary" href="#contato" src="/icons/envelope.svg">
          Entre em contato
        </Button>
        <Button class="white" href="/cadastro" src="/icons/list.svg">
          Cadastre-se
        </Button>
      </div>
      <div>
        <ul class="social-list">
          <li>
            <a href="">
              <img src="/icons/facebook.svg" alt="P치gina Facebook" />
            </a>
          </li>
          <li>
            <a href="">
              <img src="/icons/instagram.svg" alt="P치gina Instagram" />
            </a>
          </li>
          <li>
            <a href="">
              <img src="/icons/linkedin.svg" alt="P치gina Linkedin" />
            </a>
          </li>
          <!-- PEGAR OS LINKS DAS REDES SOCIAIS -->
        </ul>
      </div>
    </nav>
    <div class="header-cta">
      <Button class="primary" href="#contato" src="/icons/envelope.svg">
        Entre em contato
      </Button>
      <Button class="white" href="/cadastro" src="/icons/list.svg">
        Cadastre-se
      </Button>
    </div>
    <button class="header-menu__button" id="btnMenuMobile">
      <img
        id="btnMenuMobileImg"
        class="header-menu__icon"
        src="/icons/menu.svg"
        alt="Samantha Dutra Logo"
      />
    </button>
  </div>
</header>

<style lang="scss">
  header {
    display: flex;
    justify-content: center;
    background-color: #fff;
    position: relative;
    z-index: 999;
  }

  .header-wrapper {
    max-width: 102rem; //1220px
    width: 100%;

    padding: 1rem;

    display: flex;
    justify-content: space-between;
    align-items: center;

    position: relative;

    .header-logo {
      height: 60px;
    }
  }

  .header-nav {
    display: none;

    .header-nav__ul {
      display: flex;
      gap: 3vw;

      li {
        &:hover {
          a {
            color: var(--blue-primary);
            position: relative;

            &::before {
              content: url("/icons/drop.svg");
              position: absolute;
              left: 50%;
              transform: translateX(-50%);
              top: -2.5rem;
              opacity: 0;
              animation: drop-animation 0.3s forwards;
            }
          }
        }

        a {
          color: var(--color-dark);
          text-decoration: none;
          font-size: 1.125rem;
          font-weight: 500;
        }
      }

      .header-nav__item {
        a {
          color: var(--blue-primary);
          position: relative;

          &::before {
            content: url("/icons/drop.svg");
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            top: -1.25rem;
          }
        }
      }
    }
  }

  .header-nav.mobile-active {
    display: flex;
    justify-content: space-around;
    flex-direction: column;
    align-items: center;

    position: absolute;
    top: 92px;
    left: 0;
    width: 100%;
    z-index: 2;
    height: calc(100vh - 92px);
    background-color: white;
    border-bottom: 3px solid var(--color-gray);

    .header-nav__ul {
      flex-direction: column;
      align-items: center;
      gap: 7vh;
    }
  }

  .header-cta,
  .nav-cta {
    display: none;
  }

  .header-menu__button {
    border: none;
    background: none;
    padding: 0.5rem;
    cursor: pointer;

    .header-menu__icon {
      width: 35px;
    }
  }

  .nav-active {
    .header-menu__icon {
      width: 23px;
      margin: 0.375rem;
    }
  }

  .social-list {
    display: none;
  }

  .nav-active {
    .social-list {
      display: flex;
      gap: 0.675rem;

      img {
        width: 38px;
      }
    }

    .nav-cta {
      display: flex;
      gap: 1rem;
      flex-direction: column;
      align-items: center;
    }
  }

  @keyframes drop-animation {
    from {
      top: -2.5rem;
      opacity: 0;
    }
    to {
      top: -1.25rem;
      opacity: 1;
    }
  }

  @media screen and (min-width: 900px) {
    .header-nav {
      display: block;
    }

    .header-wrapper {
      padding: 2.5rem 1rem;
    }

    .header-cta {
      display: flex;
      gap: 0.5rem;
    }
    .header-menu__button {
      display: none;
    }
  }
</style>

<script>
  const btnMenuMobile = document.getElementById("btnMenuMobile");
  const header = document.getElementById("header");
  const btnMenuMobileImg = document.getElementById(
    "btnMenuMobileImg"
  ) as HTMLImageElement;
  const logo = document.getElementById("headerLogo") as HTMLImageElement;

  const navMenu = document.getElementById("navMenu");
  const navLi = navMenu.querySelectorAll("li");

  btnMenuMobile.addEventListener("click", toggleMenu);

  function toggleMenu() {
    navMenu.classList.toggle("mobile-active");
    btnMenuMobileImg.src = navMenu.classList.contains("mobile-active")
      ? "/icons/menu-close.svg"
      : "/icons/menu.svg";
    navMenu.classList.contains;
    navMenu.classList.contains;

    btnMenuMobileImg.classList.toggle("menu-mobile__open");
    header.classList.toggle("nav-active");
  }

  function updateLogo() {
    const screenSize = window.innerWidth;

    if (screenSize < 1200) {
      logo.src = "/logo-mobile.svg";
      return;
    }

    logo.src = "/logo-fullsize.svg";
  }

  logo.addEventListener("click", () => {
    window.location.assign("/");
  });

  function toggleEventListeners(screenSize) {
    if (screenSize < 900) {
      navLi.forEach((item) => item.addEventListener("click", toggleMenu));
    } else {
      navLi.forEach((item) => item.removeEventListener("click", toggleMenu));
    }
  }

  navLi.forEach((item) => {
    item.addEventListener("click", () => {
      navLi.forEach((item) => item.classList.remove("header-nav__item"));
      item.classList.add("header-nav__item");
    });
  });

  window.addEventListener("resize", function () {
    const screenSize = window.innerWidth;

    updateLogo();
    toggleEventListeners(screenSize);

    if (screenSize >= 900 && header.classList.contains("nav-active")) {
      toggleMenu();
    }
  });

  updateLogo();
  const screenSize = window.innerWidth;
  toggleEventListeners(screenSize);
</script>
